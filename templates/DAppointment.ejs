<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/DAppointment.css">
    <title>Document</title>
  </head>
  <body>
    <main class="table">
        <section class="table_header">
          <h1>Appointment</h1>
        </section>
        <section class="table_body">
          <table>
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Email</th>
                <th>Description</th>
                <th>Services</th>
                <th>Date</th>

              </tr>
            </thead>
            <tbody>
              <% appointmentList.forEach(appointment => { %>
              <tr>
                <td><img src="data: <%= appointment.image.contentType %>;base64,<%= appointment.image.data.toString('base64') %>" alt="Picture Cannot Load"></td>
                <td><%= appointment.name %></td>
                <td><%= appointment.email %></td>
                <td class="description"><%= appointment.description %></td>
                <td><%= appointment.services %></td>
                <td><%= appointment.formattedDate %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </section>
  </body>
</html>
